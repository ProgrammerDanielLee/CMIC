                    android:fontFamily="sans-serif"/>
                <TextView
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="13dp"
                    android:rotation="180"
                    android:text=" 키 : "
