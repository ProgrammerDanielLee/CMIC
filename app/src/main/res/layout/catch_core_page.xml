        <LinearLayout

            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.Toolbar
                android:id="@+id/core_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Catch me, if you can"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/meeting_place_toolbar_font_color"
                android:gravity="center"/>
            </android.support.v7.widget.Toolbar>
                        <!--여기서부터 탭 시작-->
                <TabHost
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@android:id/tabhost">
                        <LinearLayout
                            android:id="@+id/core_linear_layout"
                            android:orientation="vertical"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent">
                        <!-- 메뉴 하나하나 시작-->
                            <TabWidget
                                android:id="@android:id/tabs"
                                android:layout_height="wrap_content"
                                android:tabStripEnabled="false"
                                style="@style/tabTheme"
                                android:layout_width="match_parent"/>
                        <!-- 메뉴 하나하나 끝-->
                        <!--본문 시작-->
                            <FrameLayout
                                android:id="@android:id/tabcontent"
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"/>
                        </LinearLayout>
                    </TabHost>
        </LinearLayout>
        <SlidingDrawer
        android:id="@+id/drawer_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:topOffset="200dp"
        android:handle="@+id/handle_right"
        android:content="@+id/content_right"
        android:orientation="horizontal">
        <!-- topOffset : 서랍을 완전히 꺼냈을 때에, 부모 위쪽과 변과의 간격
             handle : 손잡이로 사용할 뷰
             content : 서랍내용의 레이아웃
        -->
        <ImageView
            android:id="@+id/handle_right"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:src="@drawable/core_icon_image_5"
            />
            <LinearLayout

                android:id="@+id/content_right"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </SlidingDrawer>

    <SlidingDrawer
