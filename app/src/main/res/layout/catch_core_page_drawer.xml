<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="550dp">
        <TextView
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm your private information"/>
        <LinearLayout
            android:id="@+id/drawer_layout"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">
                <TextView
                    android:id="@+id/drawer_sex"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:text="성별"
                    android:fontFamily="sans-serif" />
                <TextView
                    android:id="@+id/drawer_number"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="번호"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif" />
                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:text="호"
                    android:fontFamily="sans-serif"/>
        </LinearLayout>
        <TextView
            android:id="@+id/drawer_name"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/drawer_layout"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="성명"/>
        <TextView
            android:id="@+id/drawer_email"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/drawer_name"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이메일"/>
        <TextView
            android:id="@+id/drawer_age"
            android:layout_below="@+id/drawer_email"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나이"/>
        <TextView
            android:id="@+id/drawer_job"
            android:layout_below="@+id/drawer_age"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="직업"/>
        <TextView
            android:layout_below="@+id/drawer_job"
            android:id="@+id/drawer_tall"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="키"/>
        <TextView
            android:id="@+id/drawer_local"
            android:layout_below="@+id/drawer_tall"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="지역"/>
        <TextView
            android:id="@+id/drawer_smoking"
            android:layout_below="@+id/drawer_local"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="흡연여부"/>
        <TextView
            android:id="@+id/drawer_mind"
            android:layout_below="@+id/drawer_smoking"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="성격"/>
        <TextView
            android:id="@+id/drawer_blood"
            android:layout_below="@+id/drawer_mind"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="혈액형"/>
        <TextView
            android:id="@+id/drawer_hobby"
            android:layout_below="@+id/drawer_blood"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="취미"/>
</RelativeLayout>